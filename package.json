{
  "name": "@ircam/sc-motion",
  "version": "2.0.0",
  "authors": [
    "Frédéric Bevilacqua",
    "Jean-Philippe Lambert",
    "Benjamin Matuszewski"
  ],
  "description": "Processing tools for motion",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ircam-ismm/sc-motion.git"
  },
  "bugs": {
    "url": "https://github.com/ircam-ismm/sc-motion/issues"
  },
  "files": [
    "./src/**/*.js"
  ],
  "main": "./src/index.js",
  "exports": {
    ".": {
      "default": "./src/index.js",
      "types": "./types/index.d.ts"
    },
    "./gravity.js": {
      "default": "./src/Gravity.js",
      "types": "./types/Gravity.d.ts"
    },
    "./*.js": {
      "default": "./src/*.js",
      "types": "./src/*.d.ts"
    }
  },
  "imports": {
    "#data/*.json": "./test/data/*.json"
  },
  "scripts": {
    "api": "npm run types && jsdoc-to-readme --src src/*.js --heading-depth 3",
    "preversion": "npm run test && npm run types && npm run api && git commit -am 'chore: doc: rebuild'  --allow-empty",
    "test": "node --test --experimental-test-coverage 'test/**/*.test.js'",
    "test:watch": "node --watch --test 'test/**/*.test.js'",
    "types": "rm -rf types && tsc"
  },
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@ircam/eslint-config": "^2.0.1",
    "@ircam/sc-utils": "^1.11.0",
    "eslint": "^9.21.0",
    "fast-check": "^4.0.0",
    "jsdoc-to-readme": "^2.0.2"
  },
  "dependencies": {
    "typescript": "^5.9.3"
  }
}

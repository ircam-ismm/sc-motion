{
  "name": "@ircam/sc-motion",
  "version": "1.0.0",
  "authors": [
    "Frédéric Bevilacqua",
    "Jean-Philippe Lambert",
    "Benjamin Matuszewski"
  ],
  "description": "Set processing tools for motion",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./src/index.js",
    "./*.js": "./src/*.js"
  },
  "imports": {
    "#data/*.json": "./test/data/*.json",
    "#helpers/*.js": "./test/helpers/*.js"
  },
  "scripts": {
    "api": "jsdoc-to-readme --src src/*.js --heading-depth 2",
    "lint": "eslint ./src/*.js",
    "preversion": "npm run api && git commit -am 'docs: rebuild'  --allow-empty",
    "test": "mocha 'tests/**/*.spec.js'",
    "test:watch": "mocha --watch --parallel 'tests/**/*.spec.js'"
  },
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@ircam/eslint-config": "^2.0.1",
    "eslint": "^9.21.0",
    "fast-check": "^4.0.0",
    "jsdoc-to-readme": "^2.0.2"
  }
}
